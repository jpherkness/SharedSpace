<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="edu.oakland.sharedspace.CreateEventActivity">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_event_title"
        android:inputType="textCapWords"
        app:met_floatingLabel="highlight"
        app:met_hideUnderline="true"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_event_description"
        app:met_iconLeft="@drawable/ic_add_24dp"
        app:met_floatingLabel="highlight"
        android:inputType="textMultiLine|textCapSentences"
        app:met_hideUnderline="true"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:hint="@string/hint_event_location"
        app:met_iconLeft="@drawable/ic_place_24dp"
        app:met_floatingLabel="highlight"
        app:met_hideUnderline="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etFromDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:hint="@string/hint_event_from_date"
            app:met_iconLeft="@drawable/ic_place_24dp"
            app:met_floatingLabel="highlight"
            app:met_hideUnderline="true"
            android:layout_weight="1"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etFromTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:hint="@string/hint_event_from_time"
            app:met_iconLeft="@drawable/ic_place_24dp"
            app:met_floatingLabel="highlight"
            app:met_hideUnderline="true"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etToDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:hint="@string/hint_event_to_date"
            app:met_iconLeft="@drawable/ic_place_24dp"
            app:met_floatingLabel="highlight"
            app:met_hideUnderline="true"
            android:layout_weight="1"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etToTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:hint="@string/hint_event_to_time"
            app:met_iconLeft="@drawable/ic_place_24dp"
            app:met_floatingLabel="highlight"
            app:met_hideUnderline="true"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnCreateEvent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:textSize="@dimen/button_font_size"
        android:textColor="@color/white"
        android:text="@string/action_create_event"
        android:onClick="createEvent"
        android:background="@drawable/button_rounded_primary"
        android:stateListAnimator="@null"
        android:layout_marginTop="20dp" />

</LinearLayout>
